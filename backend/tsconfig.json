{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", ".vscode", "src/types/*.ts"] // Exclude node_modules, .vscode, and types directory
}
